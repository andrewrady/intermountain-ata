    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Intermountain ATA</h1>
                        <% if @event.blank? %>
													<p>No Tournament listed</p>
												<% else %>
													<h3><%= @event.name %></h3>
												<% end %>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <%= link_to rings_path, :class => 'btn btn-default btn-lg' do %>
                                <span class="network-name">Rings</span>
                                <% end %>
                            </li>
                            <li>
                                <%= link_to '#registration', :class => 'btn btn-default btn-lg' do %>
                                    <span class="network-name">Registration</span>
                                <% end %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->

	<a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Tournament Location</h2>
										<% if @event.blank? %>
											<p class="lead">No tournament</p>
										<% else %>
											<p class="lead"><%= @event.description %></p>
                    	<ul>
                        <li><%= @event.date %></li>
                        <% if @event.schedule.present? %>
													<li><%=  link_to 'Schedule of Event', @event.schedule.url, target: '_blank' %></li>
												<% end %>
                        <li><%= @event.location %></li>
                    	</ul>
										<% end %>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag('map.png', :class => 'img-responsive') %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Hotel Information</h2>
                 <% if @event.blank? %>   
										<p>No hotel information at this time</p>
									<% else %>	
										<% @event.hotels.each do |hotel| %>
												<p class="lead"><%= hotel.name %></p>
												<ul>
                        	<li>Price: <%= hotel.cost %></li>
                        	<li>Address: <%= hotel.address %></li>
                  				<li>Dates: <%= hotel.dates %></li>  	
													<li>Number: <%= hotel.number %></li>
													<li>Website: <%= link_to hotel.link, 'http://'+hotel.link, target: '_blank'  %></li>
												</ul>
											<% end %> 	
                <% end %>
								</div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <%= image_tag('hotel.jpg', :class => 'img-responsive') %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a" id="registration">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Online Registration</h2>
                    <p class="lead">Currently you should register with your instruction. We do have a link below with a pdf of the registration form to give to your instructors.</p>   
                    <ul>
                        <li><%= link_to('Registration form', asset_path('tournament-registration.pdf'), target: '_blank')  %></li>
												<li><%= link_to('Tiger registration form', asset_path('tournament-registration-tigers.pdf'), target: '_blank') %></li>
                    </ul>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag('computer.png', :class => 'img-responsive') %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

	<a  name="contact"></a>
    <div class="banner">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h3>Features of Intermountain ATA: </h3>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline intro-social-buttons">
                            <li>
                                <%= link_to rings_path, method: :get, :class => 'btn btn-default btn-lg' do %>
                                <span class="network-name">Rings</span>
                                <% end %>
                            </li>
                            <li>
                                <%= link_to '#registration', :class => 'btn btn-default btn-lg' do %>
                                    <span class="network-name">Registration</span>
                                <% end %>
                            </li>
                        </ul>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->


</body>

</html>
