<% if @competitor.present? %>
	<h2>Missing Competitors</h2>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Ring Number</th>
				<th>Name</th>
				<% if user_signed_in? %>
					<th>Delete</th>
				<% end %>
			</tr>
		</thead>
		<% @competitor.each do |c| %> 
    	<tr>
        <td data-label='Ring Number'><%= c.ring_id %></td>
        <td data-label='Name'><%= c.name %></td>
			<% if user_signed_in? %>
				<td><%= link_to('Delete', [c.ring, c], method: :delete, data: { confirm: 'Are you sure?'})  %></td>
			<% end %>
			</tr>
  	<% end %>
	</table>
<% end %>

<h1>Rings</h1>
<div class='tab-content'>
	<ul class=' nav nav-tabs' role='tablist'>
		<li role='presentation' class='active' id='active-tab'><a href='#'>Active</a></li>
		<li role='resentation' id='upcoming-tab'><a href='#'>Upcoming</a></li>
	</ul>
</div>
<div>
<div class='active-rings'>
	<table class="table table-bordered table-striped">
  	<thead>
    	<tr>
      	<th>Ring Number</th>
      	<th>Age</th>
      	<th>Rank</th>
      	<th>Division</th>
      	<th>Gender</th> 
      	<% if user_signed_in? %>
        	<th>Edit</th>
        	<th>Delete</th>
      	<% end %>
    	</tr>
  	</thead>
  	<tbody>
    	<% @ring.each do | ring | %>
      	<tr>
        	<td data-label='Ring Number'><%= ring.ring_number %></td>
        	<td data-label='Age'><%= ring.ring_age %></td>
		<td data-label='Rank'><%= ring.ring_rank %></td>
		<td data-label="Division"><%= ring.division %></td>
        	<td data-label='Gender'><%= ring.ring_gender %></td>
        	<% if user_signed_in? %>
          	<td data-label='Edit'><%= link_to('Edit', edit_ring_path(ring), method: :get) %></td>
          	<td data-label='Delete'><%= link_to('Delete', ring_path(ring), method: :delete, data: { confirm: 'Are you sure?' }) %></td>
        	<% end %>
      	</tr>
    	<% end %>
  	</tbody>
	</table>
</div>

<div class='upcoming-rings'>
	<table class="table table-bordered table-striped">
  	<thead>
    	<tr>
      	<th>Ring Number</th>
      	<th>Age</th>
      	<th>Rank</th>
      	<th>Division</th>
      	<th>Gender</th> 
      	<% if user_signed_in? %>
        	<th>Edit</th>
        	<th>Delete</th>
					<th>Change Status</th>
      	<% end %>
    	</tr>
  	</thead>
  	<tbody>
    	<% @upcoming.each do | ring | %>
      	<tr>
        	<td data-label='Ring Number'><%= ring.ring_number %></td>
        	<td data-label='Age'><%= ring.ring_age %></td>
		<td data-label='Rank'><%= ring.ring_rank %></td>
		<td data-label="Division"><%= ring.division %></td>
        	<td data-label='Gender'><%= ring.ring_gender %></td>
        	<% if user_signed_in? %>
          	<td data-label='Edit'><%= link_to('Edit', edit_ring_path(ring), method: :get) %></td>
          	<td data-label='Delete'><%= link_to('Delete', ring_path(ring), method: :delete, data: { confirm: 'Are you sure?' }) %></td>
						<td data-label='Change'><%= link_to('Move to current', ring_change_status_path(ring), :method => :post, :confirm => 'Are you sure?') %></td>
        	<% end %>
      	</tr>
    	<% end %>
  	</tbody>
	</table>
</div>
</div>

