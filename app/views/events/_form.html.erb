<%= form_for @event do |e| %>
	<%= e.label :name %>
	<%= e.text_field :name %>

	<%= e.label :location %>
	<%= e.text_field :location %>

	<%= e.label :date %>
	<%= e.text_field :date %>

	<%= e.label :schedule %>
	<%= e.file_field :schedule %>

	<%= e.label :status %>
	<%= e.select :status, options_for_select([['Upcoming','1'], ['Old', '0']]), {}, {:class => 'form-control'} %>

	<%= e.submit('Save') %>
 
<% end %>
